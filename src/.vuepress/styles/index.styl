// *************************AVAYA STYLES****************************************

// Variables

:root {
    --jade: #45A792;
    --teal: #0A8C99;
    --denim: #004E6C;
    --ocean: #1B77AF;
    --gray: #f1f1f3;
    --red: #D6291C;
    --orange: #E0883F;
    --dark-orange: #E86834;
    --black: #000000;
    --white: #ffffff;
    --shadow: 2px 4px 20px -6px rgb(0 0 0 / 30%);
    --font-family: 'Noto Sans JP', sans-serif;
}

// Buttons



//Primary
.avaya-btn {
 position: relative;
 font-weight: 500;
 font-size: 18px;
 border-radius: 6px;
 border: none;
 background: $denim;
 color: $white;
 overflow: hidden;
 box-shadow: 3px 2px 20px #4e4c4c59;
}

.avaya-btn svg {
 width: 1.2em;
 height: 1.2em;
 margin-right: 0.5em;
}

.avaya-btn span {
 position: relative;
 z-index: 10;
 transition: color 0.3s;
 display: inline-flex;
 align-items: center;
 justify-content: center;
 min-width 140px;
 min-height 40px;
font-size: 14px;
font-weight: bold; 
letter-spacing: 0;
}

.avaya-btn::before,
.avaya-btn::after {
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 z-index: 0;
}

.avaya-btn::before {
 content: "";
 background: $ocean;
 width: 120%;
 left: -10%;
 transform: skew(40deg);
 transition: transform 0.4s cubic-bezier(0.3, 1, 0.8, 1);
}


.avaya-btn:hover::before {
 transform: translate3d(100%, 0, 0);
}

.avaya-btn:active {
 transform: scale(0.95);
}







